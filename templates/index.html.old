<!DOCTYPE html>
<html>
<head>
    <title>Iconostasis</title>
</head>
<body>
    <!-- Navigation -->
    <div style="padding: 10px; background-color: #f0f0f0; margin-bottom: 20px;">
        <a href="/" style="margin-right: 20px;">Home</a>
        <a href="/upload">Upload New Icon</a>
    </div>


    <h1>Iconostasis</h1>

    <form method="get" action="/">
    <label>Filter by Saint:</label>
    <input type="text" name="saint" placeholder="e.g. St. George">

    <label>Filter by Tradition:</label>
    <select name="tradition_id">
        <option value="0">All</option>
        {% for tradition in traditions %}
            <option value="{{ tradition.id }}" {% if tradition.id|string == selected_tradition %}selected{% endif %}>
                {{ tradition.name }}
            </option>
        {% endfor %}
    </select>
    
    <label>Filter by Century:</label>
    <input type="text" name="century" placeholder="e.g. 12th Century" value="{{ century|default('') }}">

    <label>Filter by Region:</label>
    <input type="text" name="region" placeholder="e.g. Byzantium" value="{{ region|default('') }}">


    <input type="submit" value="Filter">
</form>

    <div>
        {% for icon in icons %}
            <div style="margin-bottom:20px;">
                <a href="/icon/{{ icon.id }}">
                    <img src="{{ icon.image_url }}" width="200">
                    <p>{{ icon.title }}</p>
                </a>
            </div>
        {% endfor %}
    </div>
</body>
</html>

